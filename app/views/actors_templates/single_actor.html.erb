<h1>Actor #<%=@id%> details</h1>
<a href="/actors">Go back</a>
<dl>
  <dt>Name</dt>
  <dd><%=@actor.name%></dd>
  <dt>Dob</dt>
  <dd><%=@actor.dob%></dd>
  <dt>Bio</dt>
  <dd><%=@actor.bio%></dd>
  <dt>Image</dt>
  <dd><img src="<%= @actor.image %>"></dd>
  <dt>Created at</dt>
  <dd><%=time_ago_in_words(@actor.created_at)%> ago</dd>
  <dt>Updated at</dt>
  <dd><%=time_ago_in_words(@actor.updated_at)%> ago</dd>
</dl>

<h2>Filmography</h2>
<table border="1">
  <tr>
    <td>Title</td>
    <td>Year</td>
    <td>Director</td>
    <td>Character Name</td>
    <td></td>
  </tr>

<% @films.each do |a_film| %> 

<tr>
  <%film_id=a_film.movie_id%> 
  <%f=Movie.where({:id=>film_id}).at(0)%>
  <td><%=f.title%></td>
  <td><%=f.year%></td> 
  <% d=Director.where({:id=>f.director_id}).at(0)%>
  <td><%=d.name%></td>
  <td><%= a_film.name %></td>
  <td><a href="/movies/<%= film_id %>">Show details</a></td>
</tr>
<%end%>
</table>
