<h1>Director #<%=@id%> details</h1>
<a href="/directors">Go back</a>
<dl>
  <dt>Name</dt>
  <dd><%=@name%></dd>
  <dt>Dob</dt>
  <dd><%=@dob%></dd>
  <dt>Bio</dt>
  <dd><%=@bio%></dd>
  <dt>Image</dt>
  <dd><img src="<%= @image %>"></dd>
  <dt>Created at</dt>
  <dd><%=time_ago_in_words(@create)%> ago</dd>
  <dt>Updated at</dt>
  <dd><%=time_ago_in_words(@update)%> ago</dd>
</dl>

<h2>Filmography</h2>
<table border="1">
  <tr>
    <td>ID</td>
    <td>Image</td>
    <td>Title</td>
    <td>Year</td>
    <td>Director</td>
    <td></td>
  </tr>
<% @film.each do |a_film| %>

<tr>
  <td><%=a_film.id%></td>
  <td><img src="<%= a_film.image %>"></td>
  <td><%=a_film.title%></td>
  <td><%=a_film.year%></td>
  <td><%= @name %></td>
  <td><a href="/movies/<%= a_film.id %>">Show details</a></td>
</tr>
<%end%>
</table>
