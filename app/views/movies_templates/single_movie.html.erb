<h1>Movie #<%=@id%> details</h1>
<a href="/movies">Go back</a>

<dl>
  <dt>Title</dt>
  <dd><%=@movie.title%></dd>
  <dt>Year</dt>
  <dd><%=@movie.year%></dd>
  <dt>Duration</dt>
  <dd><%=@movie.duration%></dd>
  <dt>Description</dt>
  <dd><%=@movie.description%></dd>
  <dt>Image</dt>
  <dd><img src="<%= @movie.image %>"></dd>

  <% d = Director.where({:id => @movie.director_id}).at(0) %>
  <dt>Director</dt>
  <dd><%= d.name%></dd>
  <dt>Created at</dt>
  <dd><%=time_ago_in_words(@movie.created_at)%> ago</dd>
  <dt>Updated at</dt>
  <dd><%=time_ago_in_words(@movie.updated_at)%> ago</dd>
</dl>
